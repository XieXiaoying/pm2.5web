{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "comma-dangle": [2, "never"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "react/prop-types": 0,
        "react/jsx-boolean-value": 1,
        "object-curly-spacing": [2, "always"],
        "operator-linebreak": [2, "before"]
    }
}

